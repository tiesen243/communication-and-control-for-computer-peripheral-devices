#include <stdbool.h>

#include "include/Button.h"
#include "include/ESP8266.h"
#include "include/P18F4550.h"
#include "include/UART.h"

/*
 * DEFINITIONS
 */

enum LedState {
  LED_RED = 0x08,
  LED_YELLOW = 0x10,
  LED_GREEN = 0x20,
  LED_OFF = 0x00,
};

enum Mode {
  MODE_1 = 1,
  MODE_2 = 2,
  MODE_3 = 3,
};

enum ControlMode {
  MANUAL_MODE = 0,
  AUTO_MODE = 1,
};

int durations[4] = {5, 3, 10, 1};
int mode = MODE_3;
int is_night_mode = false;
int controlMode = MANUAL_MODE;

/*
 * COMMUNICATION
 * - ESP8266
 * - UART
 */

void setup_communication() {
  UART1_Init(115200);
  Delay_ms(100);

  UART1_Write_Text("AT\r\n");
  Delay_ms(1000);
  UART1_Write_Text("AT+RST\r\n");
  Delay_ms(1000);
  UART1_Write_Text("AT+CWMODE=1\r\n");
  Delay_ms(1000);
  UART1_Write_Text("AT+CWJAP=\"Phat Tien\",\"tt@20042007\"\r\n");
  Delay_ms(10000);
  UART1_Write_Text("AT+CIFSR\r\n");
  Delay_ms(1000);
  UART1_Write_Text("AT+CIPSTART=\"TCP\",\"192.168.1.3\",3000\r\n");
  Delay_ms(5000);
  UART1_Write_Text("AT+CIPMODE=1\r\n");
  Delay_ms(1000);
  UART1_Write_Text("AT+CIPSEND\r\n");
  Delay_ms(1000);
}

char read_data() {
  char _data = 0;
  if (UART1_Data_Ready()) {
    _data = UART1_Read();
  }
  return _data;
}

void send_data(char _data) {
  if (!UART1_Tx_Idle())
    return;

  UART1_Write(_data);
  Delay_ms(100);
}

/*
 * MAIN
 * - SETUP: Initialize peripherals
 * - LOOP: Main loop
 */

void setup() {
  ADCON1 |= 0x0F;
  CMCON |= 0X07;

  TRISB = 0x07;
  PORTB = LED_OFF;

  setup_communication();
}

void delay(int delay_s) {
  int i, j;
  for (i = 0; i < delay_s * 10; i++) {
    /* UART handler */
    char msg = read_data();
    if (msg == 'T') {
      controlMode = 1 - controlMode;
      send_data(controlMode ? 'A' : 'M');
    } else if (msg == 'D' || msg == 'N') {
      is_night_mode = (msg == 'N');
      if (mode == MODE_3) {
        PORTB = LED_OFF;
        return;
      }
    } else if (msg == 'S') {
      char time[7];
      for (j = 0; j < 6; j++) {
        while (!UART1_Data_Ready())
          ;
        time[j] = UART1_Read();
        if (time[j] == 'S')
          j = -1;
      }
      time[6] = '\0';

      for (j = 0; j < 6; j++) {
        if (time[j] < '0' || time[j] > '9') {
          send_data('E');
          return;
        }
      }

      durations[0] = (time[0] - '0') * 10 + (time[1] - '0');
      durations[1] = (time[2] - '0') * 10 + (time[3] - '0');
      durations[2] = (time[4] - '0') * 10 + (time[5] - '0');
      send_data('S');

      if (mode == MODE_3) {
        PORTB = LED_OFF;
        return;
      }
    } else if ((msg >= '1' || msg <= '3') && controlMode == AUTO_MODE) {
      int newMode = msg - '0';
      if (newMode >= 1 && newMode <= 3 && mode != newMode) {
        PORTB = LED_OFF;
        mode = newMode;
        send_data('0' + mode);
        return;
      }
    }

    /* Button handler */
    for (j = 0; j < 3; j++) {
      if (Button(&PORTB, j, 10, 0) && controlMode == MANUAL_MODE) {
        while (Button(&PORTB, j, 10, 0))
          ;
        PORTB = LED_OFF;
        mode = j + 1;
        send_data('0' + mode);
        return;
      }
    }

    Delay_ms(100);
  }
}

void loop() {
  if (mode == MODE_1) {
    PORTB = LED_RED;
    send_data('R');
    delay(durations[0]);
  } else if (mode == MODE_2 || (mode == MODE_3 && is_night_mode)) {
    PORTB ^= LED_YELLOW;
    send_data((PORTB & LED_YELLOW) ? 'Y' : 'O');
    delay(durations[3]);
  } else if (mode == MODE_3) {
    if ((PORTB & 0x38) == LED_RED) {
      PORTB = LED_YELLOW;
      send_data('Y');
      delay(durations[1]);
    } else if ((PORTB & 0x38) == LED_YELLOW) {
      PORTB = LED_GREEN;
      send_data('G');
      delay(durations[2]);
    } else {
      PORTB = LED_RED;
      send_data('R');
      delay(durations[0]);
    }
  } else {
    PORTB = LED_OFF;
  }
}

int main() {
  setup();
  while (true) {
    loop();
  }

  return 0;
}